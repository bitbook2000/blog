<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/crypto_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/crypto_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#fffcfcfc" >

        <View
            android:id="@+id/crypto_tab_top_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffd6d6d6" />

        <LinearLayout
            android:id="@+id/crypto_tab_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/crypto_tab_top_line"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <include
                android:id="@+id/crypto_tab_0"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/crypto_home_tab_item"
                android:visibility="gone" />

            <include
                android:id="@+id/crypto_tab_1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/crypto_home_tab_item"
                android:visibility="gone" />

            <include
                android:id="@+id/crypto_tab_2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/crypto_home_tab_item"
                android:visibility="gone" />

            <include
                android:id="@+id/crypto_tab_3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/crypto_home_tab_item"
                android:visibility="gone" />

            <include
                android:id="@+id/crypto_tab_4"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/crypto_home_tab_item"
                android:visibility="gone" />

            <include
                android:id="@+id/crypto_tab_5"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/crypto_home_tab_item"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:id="@+id/crypto_tab_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/crypto_tab_content"
            android:background="#ffd6d6d6" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/crypto_home_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/crypto_tab_layout" >
    </android.support.v4.view.ViewPager>

</RelativeLayout>