<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fffcfcfc"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" >

                <include
                    android:id="@+id/crypto_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    layout="@layout/crypto_title_layout" />

                <RelativeLayout
                    android:id="@+id/wallet_btc_info"
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:layout_below="@id/crypto_title_layout"
                    android:layout_marginTop="5dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <TextView
                        android:id="@+id/wallet_btc_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dip"
                        android:text="txt_btc_address"
                        android:textColor="@color/white"
                        android:textIsSelectable="true"
                        android:textSize="14.5dip" />

                    <TextView
                        android:id="@+id/wallet_btc_path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/wallet_btc_address"
                        android:layout_marginLeft="2dip"
                        android:layout_marginTop="2dip"
                        android:text="txt_btc_path"
                        android:textColor="#88ffffff"
                        android:textSize="9dip" />

                    <TextView
                        android:id="@+id/wallet_btc_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/wallet_btc_path"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="-0.5dip"
                        android:layout_toRightOf="@id/wallet_btc_path"
                        android:text=""
                        android:textColor="#88ffffff"
                        android:textSize="9dip" />

                    <TextView
                        android:id="@+id/wallet_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/wallet_btc_path"
                        android:layout_marginTop="8dip"
                        android:text="balance"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/wallet_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dip"
                        android:text="0"
                        android:textColor="@color/white" />

                    <View
                        android:id="@+id/wallet_menu"
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="3dip"
                        android:layout_marginRight="3dip"
                        android:background="@drawable/ic_menu" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/btns_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wallet_btc_info"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/btn_input_words"
                        style="@style/CryptoButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="import" />

                    <TextView
                        android:id="@+id/btn_path"
                        style="@style/CryptoButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:text="path" />

                    <TextView
                        android:id="@+id/btn_nostr"
                        style="@style/CryptoButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:text="nostr" />

                    <TextView
                        android:id="@+id/btn_passphrase"
                        style="@style/CryptoButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:text="json" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btns_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btns_menu"
                    android:layout_marginTop="20dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/btn_receive"
                        style="@style/CryptoButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dip"
                        android:text="receive" />

                    <TextView
                        android:id="@+id/btn_send"
                        style="@style/CryptoButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:minWidth="80dip"
                        android:text="send" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/wallet_btc_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="7dip"
                android:background="@color/tab_selected"
                android:visibility="invisible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFFFF"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" >

                <LinearLayout
                    android:id="@+id/wallet_receive_address_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/wallet_receive_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="to"
                        android:textColor="@color/txt_color" />

                    <EditText
                        android:id="@+id/wallet_receive_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="null"
                        android:textColor="@color/txt_color"
                        android:textSize="14dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wallet_receive_value_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wallet_receive_address_panel"
                    android:layout_marginTop="0dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/wallet_receive_value_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="value"
                        android:textColor="@color/txt_color" />

                    <EditText
                        android:id="@+id/wallet_receive_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="0"
                        android:textColor="@color/txt_color"
                        android:textSize="15dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wallet_receive_fee_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wallet_receive_value_panel"
                    android:layout_marginTop="0dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/wallet_receive_fee_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="fee"
                        android:textColor="@color/txt_color" />

                    <EditText
                        android:id="@+id/wallet_receive_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text=""
                        android:textColor="@color/txt_color"
                        android:textSize="15dip" />
                </LinearLayout>

                <TextView
                    android:id="@+id/wallet_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wallet_receive_fee_panel"
                    android:layout_marginTop="20dip"
                    android:text="status:"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/wallet_api_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wallet_status"
                    android:layout_marginTop="20dip"
                    android:text="api status"
                    android:textColor="@color/txt_color" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/btn_refresh"
        style="@style/CryptoButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="refresh" />

</RelativeLayout>