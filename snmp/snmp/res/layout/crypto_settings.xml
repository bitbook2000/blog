<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/crypto_setting_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snmp_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/crypto_setting_title"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@color/title_background" >

            <ImageView
                android:id="@+id/crypto_setting_title_back"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_alignParentLeft="true"
                android:scaleType="center"
                android:src="@drawable/back_arrow" />

            <TextView
                android:id="@+id/crypto_setting_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/crypto_setting_title_back"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/settings"
                android:textColor="#000000"
                android:textSize="18dip" />

            <ImageView
                android:id="@+id/crypto_setting_title_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:src="@drawable/share"
                android:visibility="gone" />
        </RelativeLayout>

        <include
            android:id="@+id/crypto_setting_envi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/crypto_settings_item_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#88888888" />

        <include
            android:id="@+id/crypto_setting_wallet_api"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/crypto_settings_wallet_api" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#88888888" />

        <include
            android:id="@+id/crypto_setting_watch_api"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/crypto_settings_watch_api" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#88888888" />

        <include
            android:id="@+id/crypto_setting_pin_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/crypto_settings_item_layout" />

        <include
            android:id="@+id/crypto_setting_pin_startup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/crypto_settings_item_layout" />

        <include
            android:id="@+id/crypto_setting_pin_randomized"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/crypto_settings_item_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#88888888" />

        <include
            android:id="@+id/crypto_setting_clear_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/crypto_settings_item_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#88888888" />

        <include
            android:id="@+id/crypto_setting_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/crypto_settings_item_layout" />
    </LinearLayout>

</ScrollView>