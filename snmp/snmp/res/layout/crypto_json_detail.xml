<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/json_detail_title"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/title_background" >

        <ImageView
            android:id="@+id/json_detail_title_back"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:scaleType="center"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/json_detail_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/json_detail_title_back"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18dip" />

        <ImageView
            android:id="@+id/json_detail_title_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:src="@drawable/share"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/json_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_json_refresh"
            style="@style/CryptoButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="refresh" />

        <TextView
            android:id="@+id/btn_json_input"
            style="@style/CryptoButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="20dip"
            android:text="input uri" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dip"
        android:background="#ffffffff" >

        <LinearLayout
            android:id="@+id/json_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="16dip" >

            <TextView
                android:id="@+id/json_detail_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:textSize="18dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>